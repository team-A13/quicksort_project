* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(135deg, #f8cdda, #1d2b64);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.container {
    text-align: center;
    background: rgba(255, 255, 255, 0.2);
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    width: 400px;
    max-width: 90%;
    color: #fff;
}

h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 20px;
}

input[type="text"] {
    width: 80%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    margin-bottom: 20px;
    font-size: 1.2rem;
}

button {
    background: #ff7e5f;
    color: #fff;
    border: none;
    padding: 12px 20px;
    border-radius: 30px;
    font-size: 1.2rem;
    cursor: pointer;
    transition: background 0.3s ease;
}

button:hover {
    background: #feb47b;
}

#visualization {
    margin-top: 20px;
    font-size: 1.2rem;
    line-height: 1.5;
    word-wrap: break-word;
    background-color: rgba(255, 255, 255, 0.3);
    padding: 15px;
    border-radius: 10px;
}

.step {
    margin-top: 10px;
    padding: 10px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 5px;
    font-size: 1.1rem;
    color: #333;
}

.final {
    margin-top: 20px;
    font-size: 1.4rem;
    font-weight: bold;
    color: #fff;
}
